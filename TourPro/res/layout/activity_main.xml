<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <RadioGroup 
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/rg_activity">
        <RadioButton
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:id="@+id/rb_1"
           android:button="@null"
           android:background="@drawable/btn"
           android:drawableTop="@drawable/shoucang"
           android:text="收藏"
           android:gravity="center_horizontal"
           style="@style/rb_style"
           />
        <RadioButton
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:id="@+id/rb_2"
           android:button="@null"
           android:background="@drawable/btn"
           android:drawableTop="@drawable/dingdan"
           android:text="订单"
           android:gravity="center_horizontal"
           style="@style/rb_style"/>
         <RadioButton
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:id="@+id/rb_3"
           android:button="@null"
           android:background="@drawable/btn"
           android:drawableTop="@drawable/shouye"
           android:text="首页"
           android:gravity="center_horizontal"
           style="@style/rb_style"/>
          <RadioButton
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:id="@+id/rb_4"
           android:button="@null"
           android:background="@drawable/btn"
           android:drawableTop="@drawable/gerenzhongxin"
           android:text="个人中心"
           android:gravity="center_horizontal"
           style="@style/rb_style"/>
           <RadioButton
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:id="@+id/rb_5"
           android:button="@null"
           android:background="@drawable/btn"
           android:drawableTop="@drawable/shezhi"
           android:text="设置"
           android:gravity="center_horizontal"
           style="@style/rb_style"/>
    </RadioGroup>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_container"
        android:layout_above="@id/rg_activity"
        >
        
    </RelativeLayout>

</RelativeLayout>
